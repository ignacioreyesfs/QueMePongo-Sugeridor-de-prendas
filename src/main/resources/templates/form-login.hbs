<form method="POST" action="/login" name="flogin" id="flogin">
    {{#if isNotCorrect}}
		{{> alert.hbs }}
	{{/if}}

    <div class="input-group form-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-user"></i></span>
        </div>
        <input type="text" class="form-control" placeholder="Usuario o email" name="username" id="username" value='{{user}}'>

    </div>
    <div class="input-group form-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-key"></i></span>
        </div>
        <input type="password" class="form-control" placeholder="ContraseÃ±a" name="password" id="password" value='{{password}}'>
    </div>
    <div class="row align-items-center remember">
        <input type="checkbox">Recordarme
    </div>
    <div class="form-group">
        <input type="submit" value="Ingresar" class="btn float-right login_btn">
    </div>
</form>